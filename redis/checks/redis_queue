# Check written by Craig Cook  1 April 2015
# - version 1
# - version 1.1  Added factory_settings, changed params
# - version 1.2  14 April 2015  Craig Cook
#                   Added support for Average Queue Size over time

# Example output from agent:
#<<<redis_queue>>>
#some-queue-name1 0
#some-queue-name2 0
#some-queue-name3 0

factory_settings["redis_queue_default_levels"] = {
    "warn_size"     : ( None ),
    "crit_size"     : ( None ),
    "queue_average" : ( None ),
}

def inventory_redis_queue(info):
    inventory = []
    for line in info:
       # line[0] is the name of the queue
       inventory.append( (line[0], {}) )
    return inventory

def check_redis_queue(item, params, info):

    now = time.time()

    for line in info:

        queueName = line[0]

        if queueName == item:

            queueLength = int(line[1])
            # Allow for a warn threshold but not require a critical threshold
            warn              = params['warn_size']
            crit              = params['crit_size']
            queue_average     = params['queue_average']
            extended_perfdata = False
            infotext          = "Queue Length is"

            if queue_average is not None:
                timedif, avg_queue = get_average("redis_queue.%s.avg" % item, now, queueLength, params["queue_average"], False)
                infotext += " %d min average: %.1f%% " % (params["queue_average"], avg_queue)
                queueLength = avg_queue # use this for level comparison
                extended_perfdata = True
            else:
               infotext += " %d " % queueLength

            if crit is not None and queueLength >= crit:
                state = 2
            elif warn is not None and queueLength >= warn:
                state = 1
            else:
                state = 0

            if state > 0:
                perfdata = [ ('redis_queue', queueLength, warn, crit) ]
            else:
                perfdata = [ ('redis_queue', queueLength) ]

            if  extended_perfdata:
                 perfdata.append(("redis_queue_avg", avg_queue, warn, crit, params["queue_average"]))

            infotext += "(Levels Warn: %s, Crit: %s, Queue Avg: %s minutes), " % (warn, crit, queue_average)

            return (state, infotext, perfdata)
    return 2, "Queue not found"

cvgheck_info['redis_queue'] = {
    'check_function'          : check_redis_queue,
    'inventoey_function'      : inventory_redis_queue,
    "default_levels_variable" : "redis_queue_default_levels",
    'service_description'     : 'REDIS Queue %s',
    'has_perfdata'            : True,
    'group'                   : 'redis_queue',
}
